<section class="hero-section" id="home">
    <div class="container">
        <div class="row align-items-center min-vh-100 py-5 py-md-0">
            <div class="col-lg-6 py-5 py-lg-0">
                <h1 class="display-4 fw-bold mb-4">Revolutionize Your Wardrobe Experience</h1>
                <p class="lead mb-4">Smart Wardrobe uses RFID technology and AI to transform how you organize, track and select your clothing. Get personalized recommendations and insights about your wardrobe habits.</p>
                <div class="d-flex flex-column flex-sm-row gap-3">
                    <a href="#" class="btn btn-primary btn-lg" onclick="router.navigate('signup')">Get Started</a>
                    <a href="#" class="btn btn-outline-primary btn-lg" onclick="router.navigate('signup', { trial: true })">Try free for 7 Days</a>
                </div>
            </div>
            <div class="col-lg-6 mt-5 mt-lg-0">
                <div class="hero-image-container">
                    <img src="https://placehold.co/600x400/f9fafb/6366f1?text=AI+Stylist" alt="AI Stylist" class="img-fluid rounded-4 shadow-lg">
                    <div class="floating-element floating-element-1">
                        <i class="bi bi-lightning-charge-fill"></i>
                        <span>Smart Recommendations</span>
                    </div>
                    <div class="floating-element floating-element-2">
                        <i class="bi bi-tag-fill"></i>
                        <span>RFID Tracking</span>
                    </div>
                    <div class="floating-element floating-element-3">
                        <i class="bi bi-graph-up"></i>
                        <span>Usage Analytics</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section py-5" id="features">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h1 fw-bold mb-3">Powerful Features</h2>
            <p class="lead text-muted">Everything you need to manage your wardrobe intelligently</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-tag-fill fs-1 text-primary"></i>
                    </div>
                    <h3 class="h4 mb-3">RFID Tracking</h3>
                    <p class="text-muted">Automatically track your clothing items with RFID tags for seamless organization.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-lightning-charge-fill fs-1 text-primary"></i>
                    </div>
                    <h3 class="h4 mb-3">Smart Recommendations</h3>
                    <p class="text-muted">Get personalized outfit suggestions based on weather, occasion, and your preferences.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-graph-up fs-1 text-primary"></i>
                    </div>
                    <h3 class="h4 mb-3">Usage Analytics</h3>
                    <p class="text-muted">Gain insights into your wardrobe habits and make informed decisions about your clothing.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="testimonials-section py-5" id="testimonials">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h1 fw-bold mb-3">What Our Users Say</h2>
            <p class="lead text-muted">Discover how Smart Wardrobe has transformed the way people manage their clothing</p>
        </div>
        <div class="row g-4">
            {{#each testimonials}}
            <div class="col-md-4">
                <div class="testimonial-card">
                    <div class="testimonial-content">
                        <i class="bi bi-quote fs-1 text-primary opacity-25"></i>
                        <p class="mb-4">{{content}}</p>
                    </div>
                    <div class="testimonial-author">
                        <div class="testimonial-author-avatar">
                            <img src="{{author.avatar}}" alt="{{author.name}}">
                        </div>
                        <div class="testimonial-author-info">
                            <h5 class="testimonial-author-name mb-0">{{author.name}}</h5>
                            <p class="testimonial-author-title">{{author.title}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>